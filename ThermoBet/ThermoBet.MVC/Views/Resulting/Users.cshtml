@model ThermoBet.MVC.Models.ResultingTournamentViewModel
@{
    ViewData["Title"] = "Home Page";
}



<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Liste des User ayant participé au tournament</h1>

    <!-- DataTales Example -->

    <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>BetclicUserName</th>
                    <th>Email</th>
                    <th>Nb Reponse</th>
                    <th>Gain</th>
                </tr>
            </thead>
        </table>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#example").DataTable({
            "order": [3, 'desc'],
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "Resulting/Users/LoadData/@Model.Id",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
            "columns": [
                { "data": "id", "name": "Id", "autoWidth": true },
                { "data": "betclicUserName", "name": "BetclicUserName", "autoWidth": true },
                { "data": "email", "name": "Email", "autoWidth": true },
                { "data": "nbGoodReponse", "name": "NbGoodReponse", "autoWidth": true },
                { "data": "amountOfWinnings", "name": "AmountOfWinnings", "autoWidth": true }

            ]

        });
    });
</script>