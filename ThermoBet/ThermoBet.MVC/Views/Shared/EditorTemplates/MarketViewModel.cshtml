@model ThermoBet.MVC.Models.MarketViewModel

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="WinningSelectionId" />
<h5 class="card-header">
    <div class="form-group">
        <label for="Name">Question</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="StartTimeUtc">Date</label>
        <input asp-for="StartTimeUtc" class="form-control">
        <span asp-validation-for="StartTimeUtc" class="text text-danger"></span>
    </div>
</h5>
<div class="card-body">
    <div class="row">
        @for (int i = 0; i < Model.Selections.Count; i++)
        {
            @Html.EditorFor(m => m.Selections[i])
        }
    </div>
</div>
