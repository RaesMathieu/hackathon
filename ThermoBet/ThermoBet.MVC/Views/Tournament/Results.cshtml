@model ThermoBet.MVC.Models.AllResultsViewModel
@{
    ViewData["Title"] = "Home Page";
}



<div class="container-fluid">

    <!-- DataTales Example -->

    <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>UserId</th>
                    <th>Pseudo</th>
                    <th>ChosenSelectionId</th>
                    <th>WinningSelectionId</th>
                    <th>BetDate</th>
                </tr>
            </thead>
            @foreach (var result in Model.Results)
            {
        <tr>
            <td>@result.UserId</td>
            <td>@result.Pseudo</td>
            <td>@result.ChosenSelectionId</td>
            <td>@result.WinningSelectionId</td>
            <td>@result.BetDate</td>
        </tr>
            }
        </table>
        <hr />

    </div>
</div>