@{
    ViewData["Title"] = "Home Page";
}



<div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Liste des tournaments</h1>

          <!-- DataTales Example -->

              <div class="table-responsive">
<table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">  
            <thead>  
                <tr>  
                    <th>Id</th>  
                    <th>Name</th>  
                    <th>StartTimeUtc</th>  
                    <th>EndTimeUtc</th>  
                    <th>Edit</th>  
                </tr>  
            </thead>  
        </table>
        <hr/>
        <a class="btn btn-success float-right" href="/Tournament/Add">Ajouter</a>'

              </div>
            </div>
        <script>
        $(document).ready(function ()  
        {  
            $("#example").DataTable({
                "order": [2, 'desc'],
                "processing": true, // for show progress bar  
                "serverSide": true, // for process server side  
                "filter": true, // this is for disable filter (search box)  
                "orderMulti": false, // for disable multiple column at once  
                "ajax": {  
                    "url": "/Tournament/LoadData",  
                    "type": "POST",  
                    "datatype": "json"  
                },  
                "columnDefs":  
                [{  
                    "targets": [0],  
                    "visible": false,  
                    "searchable": false  
                },{  
                    "targets": [4],  
                    "orderable": false,  
                    "searchable": false  
                }],  
                "columns": [  
                    { "data": "id", "name": "Id", "autoWidth": true },  
                    { "data": "name", "name": "Name", "autoWidth": true },  
                    { "data": "startTimeUtc", "name": "StartTimeUtc", "autoWidth": true },  
                    { "data": "endTimeUtc", "name": "EndTimeUtc", "autoWidth": true },  
                    {  
                        "render": function (data, type, full, meta)  
                        { 
                            return '<a class="btn btn-info" href="/Tournament/Edit/' + full.id + '">Edit</a>';
                        }  
                    }  
                ]  
  
            });  
        });  
</script>